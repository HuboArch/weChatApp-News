page {
    height: 100%;
    background-color: #b3d4db;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avatar {
    display: block;
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
    border-radius: 50%;
}

.moto-container {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border: 1px solid #405f80;
    border-radius: 5px;
    color: #405f80;
}

.user-name {
    margin: 100rpx 0 200rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.moto {
    font-size: 22rpx;
    font-weight: bold;
}