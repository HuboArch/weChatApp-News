.post-container {
    display: flex;
    flex-direction: column;
    margin: 20rpx 0 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 5px;
}

.post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-date {
    margin-bottom: 5px;
    margin-left: 20rpx;
    vertical-align: middle;
    font-size: 26rpx;
}

.post-title {
    margin-left: 10px;
    margin-bottom: 10px;
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
}

.post-image {
    margin: 0 auto 15px;
    width: 100%;
    height: 340rpx;
}

.post-content {
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    color: #666;
}

.post-like {
    flex-direction: row;
    margin-left: 10px;
    font-size: 13px;
    line-height: 16px;
}

.post-like-icon {
    width: 16px;
    height: 16px;
    margin-right: 6px;
    vertical-align: middle;
}

.post-like-num {
    margin-right: 20px;
    vertical-align: middle;
}
